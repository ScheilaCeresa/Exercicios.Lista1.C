#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    float area, raio, comprimento;

        cout << "Informe o raio: ";
        cin >> raio;

        area = 3.15* pow(raio,2);
        comprimento = 2* 3.15 * raio;

        cout << "A area eh de: "<< area<<endl;
        cout << "O comprimento eh de: " << comprimento;
    return 0;
}