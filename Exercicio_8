#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    float x1, x2, y1, y2, d;

    cout << "Informe a primeira coordenada: ";
    cin >> x1;
    cin >> y1;
    cout << "Informe a segunda coordenada: ";
    cin >> x2;
    cin >> y2;

    d = sqrt (pow(x2,2)- pow(x1,2)+ pow(y2,2)- pow(y1,2));

    cout << "A distancia entre eles: "<<d;


    return 0;
}
